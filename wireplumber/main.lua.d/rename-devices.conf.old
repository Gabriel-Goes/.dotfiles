monitor.alsa.rules = [
  {
    matches = [
      {
        { "node.name" = "alsa_output.usb-3142_fifine_Microphone-00.analog-stereo" }
      }
    ]
    actions = {
      {
        "update-props" = {
          "node.description" = "Fifine Output"
          "device.nick" = "Fifine_Output"
        }
      }
    }
  }
  {
    matches = [
      {
        { "node.name" = "alsa_output.usb-C-Media_Electronics_Inc._USB_PnP_Sound_Device-00.analog-stereo-output" }
      }
    ]
    actions = {
      {
        "update-props" = {
          "node.description" = "Headset USB PnP Sound Device Output"
          "device.nick" = "Headset_Output"
        }
      }
    }
  }
  {
    matches = [
      {
        { "node.name" = "alsa_input.usb-3142_fifine_Microphone-00.analog-stereo" }
      }
    ]
    actions = {
      {
        "update-props" = {
          "node.description" = "Fifine Input"
          "device.nick" = "Fifine_Input"
        }
      }
    }
  }
  {
    matches = [
      {
        { "node.name" = "alsa_input.usb-C-Media_Electronics_Inc._USB_PnP_Sound_Device-00.analog-mono" }
      }
    ]
    actions = {
      {
        "update-props" = {
          "node.description" = "Headset USB PnP Sound Device Input"
          "device.nick" = "Headset_Input"
        }
      }
    }
  }
]
