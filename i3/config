# I3-WM Configuration File
font pango: opendyslexic 7
set $refresh_i3status killall -SIGUSR1 i3status

exec --no-startup-id dex -ae i3

floating_modifier $mod
set $mod Mod4

for_window [class="^.*"] border pixel 0
gaps inner 3
gaps outer 3
smart_gaps on

#bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86Tools exec --no-startup-id 'tsm' 'Spotify' 'spotify_player'
bindsym Print exec --no-startup-id 'screenshot'
bindsym $mod+Print exec --no-startup-id 'screenshot_wind'

bindsym $mod+XF86Tools exec --no-startup-id discord

# PROJETOS
bindsym $mod+F1 exec --no-startup-id 'tsm'
bindsym $mod+F2 exec --no-startup-id 'tsm' '󰇧PreditorTerra󰇧' 'cd ~/projetos/PreditorTerra && vim .'
bindsym $mod+F3 exec --no-startup-id 'tsm' '󰇧Classificador󰇧' 'cd ~/projetos/ClassificadorSismologico && vim .'
bindsym $mod+F5 exec --no-startup-id 'tsm' '󰇧Classificador_󰇧' 'cd ~/projetos/ClassificadorSismologico && ./farejador.sh'
bindsym $mod+F8 exec --no-startup-id 'tsm' '󱁊ZettelVim󱁊' 'cd ~/projetos/ZettelVim && vim .'

# EXECUTÁVEIS
bindsym $mod+F7 exec --no-startup-id 'tsm' '󱁊Zettelkasten' 'cd ~/docs/TempestadeCerebral && vim "tempestade cerebral"'
bindsym $mod+F10 exec --no-startup-id 'tsm' '󰇧_Postgre' "if ! systemctl is-active --quiet postgresql; then sudo systemctl start postgresql; fi && sudo -u postgres psql"

# CONFIGURAÇÕES
bindsym $mod+Shift+F11 exec --no-startup-id 'tsm' 'Configs' 'cd ~/.config/i3 && vim ./config'
bindsym $mod+Shift+F12 exec --no-startup-id 'tsm' 'Configs' 'cd ~/.config/nvim && vim ./init.lua'
bindsym $mod+F12 exec --no-startup-id 'tsm' 'Configs' 'cd ~/.config && vim .'

bindsym $mod+Return exec alacritty -e tmux
bindsym $mod+Shift+q kill

bindsym Menu exec --no-startup-id dmenu_run_history
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+c focus child

set $ws1 "1:  NEOVIM"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6: 󱁊 Zettelkasten"
set $ws7 "7:  Biblioteca"
set $ws8 "8"
set $ws9 "9:  Configs"

set $ws10 "10"
set $ws18 "18: 󱀞 Multimídia"
set $ws19 "19: 󰑋 OBStudio"
set $ws20 "20: 󰇧 Preditor Terra"

workspace $ws1 output DVI-D-0
workspace $ws2 output DVI-D-0
workspace $ws3 output DVI-D-0
workspace $ws4 output DVI-D-0
workspace $ws5 output DVI-D-0
workspace $ws6 output DVI-D-0
workspace $ws7 output DVI-D-0
workspace $ws8 output DVI-D-0
workspace $ws9 output DVI-D-0

workspace $ws10 output DP-0
workspace $ws18 output DP-0
workspace $ws19 output DP-0
workspace $ws20 output DP-0

for_window [title="Preditor󰇧"] move container to workspace $ws1
for_window [title="󰇧Test"] move container to workspace $ws1
for_window [title="ZettelVim"] move container to workspace $ws1
for_window [title="Zettelkasten"] move container to workspace $ws6
for_window [title="Mendeley"] move container to workspace $ws7
for_window [title="calibre"] move container to workspace $ws7
for_window [title="Configs"] move container to workspace $ws9
for_window [title="Configs"] move container to workspace $ws9
for_window [title="Configs"] move container to workspace $ws9
for_window [title="OBS"] move container to workspace $ws19
for_window [class="discord"] move container to workspace $ws18
for_window [class="Spotify"] move container to workspace $ws18
for_window [class="PreditorTerra"] move container to workspace $ws20

bindsym $mod+1 workspace number 1; rename workspace to $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number 6; rename workspace to $ws6
bindsym $mod+7 workspace number 7; rename workspace to $ws7
bindsym $mod+8 workspace number 8; rename workspace to $ws8
bindsym $mod+9 workspace number 9; rename workspace to $ws9
bindsym $mod+0 workspace number 10; rename workspace to $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
